@model formulario1.Models.Producto
@{
    ViewData["Title"] = "Privacy Policy";
}


<div class="text-center">
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

  <form asp-controller="Producto" asp-action="calcular">
        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control form-control-sm" type="text" placeholder="Escribe el producto" aria-label=".form-control-sm" />

        <label asp-for="precio" class="form-label"></label>
        <input asp-for="precio" class="form-control form-control-sm" type="text" placeholder="Ingresar el precio" aria-label=".form-control-sm" />

        
        <label asp-for="cantidad" class="form-label"></label>
        <input asp-for="cantidad" class="form-control form-control-sm" type="text" placeholder="Ingresar la cantidad" aria-label=".form-control-sm" />
        

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar</button> 
        </div>              
    </form>
      <h1>@ViewData["Message"]</h1>
      </div>